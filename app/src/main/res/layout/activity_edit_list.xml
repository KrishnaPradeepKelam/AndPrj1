<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vkelam001c.andprj1.EditList">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/etEditText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="87dp"
            android:layout_marginStart="87dp"
            android:layout_marginTop="95dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etEditText2"
            android:layout_alignStart="@+id/etEditText2"
            android:layout_below="@+id/etEditText2"
            android:onClick="onSave"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="16dp"
            android:text="@string/Save" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn2"
            android:layout_alignLeft="@+id/btn2"
            android:layout_alignStart="@+id/btn2"
            android:layout_marginBottom="47dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:text="@string/textview"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
